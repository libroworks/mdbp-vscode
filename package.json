{
  "publisher": "libroworks",
  "repository": {
    "type": "git",
    "url": "https://github.com/libroworks/mdbp-vscode"
  },
  "name": "mdbp-vscode",
  "displayName": "mdbp_vscode",
  "description": "Markdown Book Preview for VSCode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.69.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:mdbp-vscode.startServer",
    "onCommand:mdbp-vscode.stopServer",
    "onCommand:mdbp-vscode.toggle",
    "onCommand:mdbp-vscode.toggleVS",
    "onCommand:mdbp-vscode.exportXML"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mdbp-vscode.startServer",
        "title": "Start Server",
        "category": "mdbp-vscode"
      },
      {
        "command": "mdbp-vscode.stopServer",
        "title": "Stop Server",
        "category": "mdbp-vscode"
      },
      {
        "command": "mdbp-vscode.toggle",
        "title": "Open HTML Preview",
        "category": "mdbp-vscode"
      },
      {
        "command": "mdbp-vscode.toggleVS",
        "title": "Open Vivliostyle Preview",
        "category": "mdbp-vscode"
      },
      {
        "command": "mdbp-vscode.exportXML",
        "title": "Export InDesign XML",
        "category": "mdbp-vscode"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "mdbp-vscode-submenu1",
          "group": "MDBP",
          "when": "resourceLangId == markdown"
        }
      ],
      "mdbp-vscode-submenu1": [
        {
          "command": "mdbp-vscode.startServer",
          "group": "0_MDBP-server",
          "when": "resourceLangId == markdown"
        },
        {
          "command": "mdbp-vscode.stopServer",
          "group": "0_MDBP-server",
          "when": "resourceLangId == markdown"
        },
        {
          "command": "mdbp-vscode.toggleVS",
          "group": "1_MDBP-preview",
          "when": "resourceLangId == markdown"
        },
        {
          "command": "mdbp-vscode.exportXML",
          "group": "3_MDBP-indesign",
          "when": "resourceLangId == markdown"
        }
      ]
    },
    "submenus": [
      {
        "id": "mdbp-vscode-submenu1",
        "label": "MDBP for VSCode"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "14.x",
    "@types/vscode": "^1.69.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.14.0",
    "glob": "^8.0.1",
    "mocha": "^9.2.2",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "chokidar": "^3.5.3",
    "colors": "^1.4.0",
    "connect": "^3.7.0",
    "event-stream": "^4.0.1",
    "faye-websocket": "^0.11.4",
    "fs": "^0.0.1-security",
    "highlight.js": "^11.5.1",
    "http": "^0.0.1-security",
    "http-proxy": "^1.18.1",
    "image-size": "^1.0.1",
    "lodash": "^4.17.21",
    "marked": "^4.0.18",
    "morgan": "^1.10.0",
    "opn": "^6.0.0",
    "os": "^0.1.2",
    "path": "^0.12.7",
    "send": "^0.18.0",
    "serve-index": "^1.9.1"
  }
}